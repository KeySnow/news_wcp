<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_left"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/slidingmenu_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#558c5555"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_slidingmeu_left_rl1_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_news" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_slidingmeu_left_rl1_icon"
            android:layout_toRightOf="@+id/iv_slidingmeu_left_rl1_icon"
            android:text="NEWS"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_slidingmeu_left_rl1_icon"
            android:layout_toRightOf="@+id/iv_slidingmeu_left_rl1_icon"
            android:text="新闻资讯"
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slidingmenu_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_slidingmeu_left_rl2_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_read" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/iv_slidingmeu_left_rl2_icon"
            android:layout_toRightOf="@+id/iv_slidingmeu_left_rl2_icon"
            android:text="READ"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_slidingmeu_left_rl2_icon"
            android:layout_toRightOf="@+id/iv_slidingmeu_left_rl2_icon"
            android:text="新闻收藏"
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slidingmenu_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_slidingmeu_left_rl3_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_pics" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/iv_slidingmeu_left_rl3_icon"
            android:layout_toRightOf="@+id/iv_slidingmeu_left_rl3_icon"
            android:text="PICS"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_slidingmeu_left_rl3_icon"
            android:layout_toRightOf="@+id/iv_slidingmeu_left_rl3_icon"
            android:text="图片新闻"
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/slidingmenu_item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_slidingmeu_left_rl4_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_ties" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignTop="@+id/iv_slidingmeu_left_rl4_icon"
            android:layout_toRightOf="@+id/iv_slidingmeu_left_rl4_icon"
            android:text="CHAT"
            android:textColor="#fff"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_slidingmeu_left_rl4_icon"
            android:layout_toRightOf="@+id/iv_slidingmeu_left_rl4_icon"
            android:text="聊天小助手"
            android:textColor="#fff"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>