<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/tv_fragment_chat_listview_come_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:text="傻强"/>
    <TextView 
        android:id="@+id/tv_fragment_chat_listview_come_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_fragment_chat_listview_come_name"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:background="@drawable/chatto_bg_normal"
        android:text="你好！！！！！"/>

</RelativeLayout>
