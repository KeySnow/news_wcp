<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_leading_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_activity_leading_indicator1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/shape_leading_ad_indicator_unselected" />

        <ImageView
            android:id="@+id/iv_activity_leading_indicator2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/shape_leading_ad_indicator_unselected" />

        <ImageView
            android:id="@+id/iv_activity_leading_indicator3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/shape_leading_ad_indicator_unselected" />

        <ImageView
            android:id="@+id/iv_activity_leading_indicator4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/shape_leading_ad_indicator_unselected" />
    </LinearLayout>
    
    <TextView 
        android:id="@+id/tv_activity_leading_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:textSize="24sp"
        android:visibility="invisible"
        android:text="enter"/>

</RelativeLayout>