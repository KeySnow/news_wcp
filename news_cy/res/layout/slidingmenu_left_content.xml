<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_slidingmenu_left"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/slidingmenu_item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#558c5555"
        android:padding="5dp"
        android:layout_margin="20dp">
        
        <ImageView 
            android:id="@+id/slidingmenu_news_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_news"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="NEWS"
            android:layout_alignTop="@+id/slidingmenu_news_icon"
            android:layout_toRightOf="@+id/slidingmenu_news_icon"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="新闻资讯"
            android:layout_alignBottom="@+id/slidingmenu_news_icon"
            android:layout_toRightOf="@+id/slidingmenu_news_icon"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/slidingmenu_item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="20dp">
        
        <ImageView 
            android:id="@+id/slidingmenu_read_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_read"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="READ"
            android:layout_alignTop="@+id/slidingmenu_read_icon"
            android:layout_toRightOf="@+id/slidingmenu_read_icon"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="新闻收藏"
            android:layout_alignBottom="@+id/slidingmenu_read_icon"
            android:layout_toRightOf="@+id/slidingmenu_read_icon"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/slidingmenu_item3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="20dp">
        
        <ImageView 
            android:id="@+id/slidingmenu_pics_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_pics"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="PICS"
            android:layout_alignTop="@+id/slidingmenu_pics_icon"
            android:layout_toRightOf="@+id/slidingmenu_pics_icon"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="图片新闻"
            android:layout_alignBottom="@+id/slidingmenu_pics_icon"
            android:layout_toRightOf="@+id/slidingmenu_pics_icon"/>
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/slidingmenu_item4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="20dp">
        
        <ImageView 
            android:id="@+id/slidingmenu_chat_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_navigation_tab_ties"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="CHAT"
            android:layout_alignTop="@+id/slidingmenu_chat_icon"
            android:layout_toRightOf="@+id/slidingmenu_chat_icon"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#fff"
            android:text="聊天小助手"
            android:layout_alignBottom="@+id/slidingmenu_chat_icon"
            android:layout_toRightOf="@+id/slidingmenu_chat_icon"/>
    </RelativeLayout>

</LinearLayout>
